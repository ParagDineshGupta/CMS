<html>
<head>
     <!--  <link rel="stylesheet" href="css/style.css"> -->
      <link rel="stylesheet" type="text/css" href="css/bootstrap.css"/>

</head>
<script language="Javascript" src="js/stat-jquery.js"></script>
<script type="text/JavaScript" src='js/state.js'></script>


<body>

  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6 col-sm-6 col-xs-12">

          <div class="login-page">
  <div class="form">
    <h1 class="text-center img-responsive" style="padding-bottom: 15px"><img src="images/logo - Copy.png"></h1>
    <%if(login_para){%>
    <form style= 'display: none;' action = '/user_signup' method = 'post'>
    <%}
    else{%>
    <form style= 'display: block;' action = '/user_signup' method = 'post'>
    <%}%>
      <p><strong><%=msg%></strong></p>
                
<input type="text" placeholder="Company Name" name  = 'companyName' class="form-control" required />
<input type="text" placeholder="Contact Person" name  = 'contactPerson' class="form-control" required />
<input type="email" placeholder="EmailId" name  = 'emailId' class="form-control" required />
<input type="text" placeholder="Enter Mobile Number" name="ContactNumber" class="form-control" pattern="[789][0-9]{9}"  required />

       <select class="form-control" name=companyType>
        <option>Select Company Type</option>
        <option>Private Limited</option>
        <option>Limited</option>
        <option>Proprietor</option>
      </select>

<input type="text" placeholder="Company Owner Name" name  = 'ownerName' class="form-control" required />
<input type="email" placeholder="Company Owner Email-Id" name='ownerEmail' class="form-control" required />

 <select id="listBox" onchange='selct_district(this.value)' name = 'state' class="form-control"></select>
<select id='secondlist' name="city" class="form-control" required></select>

      <input type="text" placeholder="Company Address" name='address' class="form-control" required />
      
      <input type="password" min="8" placeholder="Create a Password" name="password" class="form-control" required/>
      <input type="password" placeholder="Retype Password" nam="retype_password" class="form-control" required/>
      <input type="checkbox" class="form-control" nam="agree" style="float: left;width: 7%;font-size: 100px;" required >
      <span style="float: left;position: relative;top: -5px;padding: 20px 0;">I agree to Terms &amp; Conditions.</span>
      <button type = 'submit' class="btn btn-info">Create</button>
      <p class="message custom-registered-msg">Already registered? <a href="#">Sign In</a></p>
        </form></form>
    
    <%if(login_para){%>
    <form style= 'display: block;' action = '/user_login' method = 'post'>
    <%}
    else{%>
    <form style= 'display: none;' action = '/user_login' method = 'post'>
    <%}%>
      <p><strong><%=msg%></strong></p>
      <input type="email" placeholder="Enter email Id" name = 'username'  class="form-control" required/>
      <input type="password" placeholder="Enter Password" name = 'password' class="form-control" required/>
      <button type = 'submit' class="btn btn-primary">Login</button>
      <p class="message">Not registered? <a href="#">Create an account</a></p>
        </form></form>

  </div>

      </div>
    </div>

  </div>

  
</div>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script  src="js/index.js"></script>
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
